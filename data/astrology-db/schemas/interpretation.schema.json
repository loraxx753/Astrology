{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "id",
    "scope",
    "topic",
    "title",
    "markdown"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "scope": {
      "enum": [
        "natal",
        "transit",
        "synastry",
        "composite"
      ]
    },
    "topic": {
      "enum": [
        "planet-in-sign",
        "planet-in-house",
        "house-cusp-in-sign",
        "aspect-between-bodies",
        "sign-profile",
        "house-profile",
        "degree-symbol",
        "decans-profile"
      ]
    },
    "sign_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "house_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "planet_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "other_planet_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "aspect_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "degree_note_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "decan_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "title": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "markdown": {
      "type": "string"
    },
    "source_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
      }
    },
    "confidence": {
      "enum": [
        "low",
        "medium",
        "high"
      ]
    }
  },
  "additionalProperties": false
}