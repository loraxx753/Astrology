{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "id",
    "index",
    "label",
    "angularity",
    "life_domains"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "index": {
      "type": "integer",
      "minimum": 1,
      "maximum": 12
    },
    "label": {
      "type": "string",
      "minLength": 1
    },
    "angularity": {
      "enum": [
        "angular",
        "succedent",
        "cadent"
      ]
    },
    "life_domains": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "default_sign_hint": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "source_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
      }
    }
  },
  "additionalProperties": false
}