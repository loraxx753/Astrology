{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "id",
    "label",
    "essential"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "label": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "essential": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "planet_id",
          "sign_id",
          "kind",
          "score"
        ],
        "properties": {
          "planet_id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
          },
          "sign_id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
          },
          "kind": {
            "enum": [
              "domicile",
              "exaltation",
              "detriment",
              "fall",
              "term",
              "face"
            ]
          },
          "score": {
            "type": "number"
          },
          "range_in_sign": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
          }
        },
        "additionalProperties": false
      }
    },
    "accidental_hints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "house_id",
          "score"
        ],
        "properties": {
          "house_id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
          },
          "score": {
            "type": "number"
          },
          "note": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "source_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
      }
    }
  },
  "additionalProperties": false
}