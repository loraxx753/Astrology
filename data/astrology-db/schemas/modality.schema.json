{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "id",
    "label"
  ],
  "properties": {
    "id": {
      "enum": [
        "cardinal",
        "fixed",
        "mutable"
      ]
    },
    "label": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
      }
    }
  },
  "additionalProperties": false
}